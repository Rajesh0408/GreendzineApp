<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

<RelativeLayout
    android:id="@+id/iv_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:src="@drawable/call_icon"
            android:layout_gravity="end"
            android:padding="5dp"

            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


            <ImageView
                android:layout_marginTop="30dp"
                android:layout_width="71dp"
                android:layout_height="70dp"
                android:id="@+id/image"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/moptrologo"

                />

            <TextView
                android:id="@+id/badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_round"
                android:text="4"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="230dp"
                android:layout_alignTop="@id/home"
                android:layout_alignEnd="@id/home"
                android:padding="4dp"
                android:visibility="visible" />



        </FrameLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/round_dashboard"
            android:text="Employee Productivity Dashboard"
            android:textColor="#FFFFFFB3"
            android:textAlignment="center"

            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>
</FrameLayout>