<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

<RelativeLayout
    android:id="@+id/iv_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:src="@drawable/call_icon"
            android:layout_gravity="end"


            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


            <ImageView
                android:layout_width="71dp"
                android:layout_height="70dp"
                android:id="@+id/image"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/moptrologo"

                />

            <TextView
                android:id="@+id/badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_round"
                android:text="4"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginStart="230dp"
                android:layout_alignTop="@id/home"
                android:layout_alignEnd="@id/home"
                android:padding="4dp"
                android:visibility="visible" />



        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingBottom="20dp"
            android:background="#5E5E5E82"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="10dp"
            android:background="@drawable/round_dashboard"
            android:text="Employee Productivity Dashboard"
            android:textColor="#FFFFFFB3"
            android:textAlignment="center"
            />

        

<!--          progress 1-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:text="Productivity on Monday"
            android:layout_marginStart="60dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#36A546"
                android:text="4%"
                android:id="@id/progress1"
                android:layout_gravity="end"
                android:layout_marginEnd="70dp"

                />
        </FrameLayout>
        <ProgressBar
            android:id="@+id/progress1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:background="#5E5E5E82"
            android:layout_marginTop="2dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:indeterminate="false"
            android:progress="4"
            android:progressDrawable="@drawable/progress_bar"

            />
        <!--          progress 2-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Productivity on Tuesday"
                android:layout_marginStart="60dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#36A546"
                android:text="92%"
                android:id="@id/progress2"
                android:layout_gravity="end"
                android:layout_marginEnd="70dp"

                />
        </FrameLayout>
        <ProgressBar
            android:id="@+id/progress2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:background="#5E5E5E82"
            android:layout_marginTop="2dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:indeterminate="false"
            android:progress="92"
            android:progressDrawable="@drawable/progress_bar"


            />
        <!--          progress 3-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Productivity on Wednesday"
                android:layout_marginStart="60dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#36A546"
                android:text="122%"
                android:id="@id/progress3"
                android:layout_gravity="end"
                android:layout_marginEnd="70dp"

                />
        </FrameLayout>
        <ProgressBar
            android:id="@+id/progress3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
