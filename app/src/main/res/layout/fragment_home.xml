<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

<RelativeLayout
    android:id="@+id/iv_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:src="@drawable/call_icon"
            android:layout_gravity="end"


            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="71dp"
                android:layout_height="70dp"
                android:id="@+id/image"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/moptrologo"

                />

            <TextView
                android:id="@+id/badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/badge_bg"
                android:text="4"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:paddingLeft="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_marginStart="230dp"
                android:layout_alignTop="@id/home"
                android:layout_alignEnd="@id/home"
                android:visibility="visible" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/edit_round"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingTop="10dp"
            android:background="@drawable/round_dashboard"
            android:text="Employee Productivity Dashboard"
            android:textColor="#FFFFFFB3"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textAlignment="center"
            />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewProgress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                />


            <!--          progress 1-->

        </LinearLayout>
    </LinearLayout>



</RelativeLayout>
</FrameLayout>